{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",          // Outputs to puppetos/src/core/dist/
    "rootDir": ".",            // Root at puppetos/src/core/
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "."            // Relative to puppetos/src/core/
  },
  "include": [
    "*.ts",                  // e.g., index.ts in core/
    "core/*.ts",             // Files directly in core/
    "interfaces/*.ts",       // Files in core/interfaces/
    "interfaces/Types/*.ts"  // Files in core/interfaces/Types/ (if exists)
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../server/**/*",
    "../agents/**/*",
    "../api/**/*",
    "../config/**/*",
    "../platforms/**/*",
    "../types/**/*",
    "../utils/**/*",
    "storage/**/*"
  ]
}