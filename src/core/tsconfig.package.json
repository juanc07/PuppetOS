{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist", // Outputs to src/core/dist/
    "rootDir": "../", // Root at src/
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "../"
  },
  "include": [
    "*./.ts",
    "./core/*.ts",
    "../interfaces/*.ts",
    "../interfaces/Type/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../server/**/*",
    "../agents/**/*",
    "../api/**/*",
    "../config/**/*",
    "../platforms/**/*",
    "../types/**/*",
    "../utils/**/*",
    "../storage/**/*"
  ]
}